#!/usr/bin/env php
<?php

require __DIR__ . "/../vendor/autoload.php";

use DrupalPatchUtils\Command as Cmd;

$application = new Symfony\Component\Console\Application();
$application->addCommands(
    [
        new Cmd\ConfigureCommand(),
        new Cmd\PostCommentCommand(),
        new Cmd\SearchIssuePatchCommand(),
        new Cmd\SearchRtbcPatchesCommand(),
        new Cmd\ValidatePatchCommand(),
        new Cmd\ValidateRtbcPatchesCommand(),
    ]
);

$application->run();
